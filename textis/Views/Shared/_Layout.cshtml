<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      @Scripts.Render("~/bundles/oldIEBrowsersSupport")
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="masthead">
            <h3 class="text-muted">@Html.ActionLink("Application Name", "Index", "Home")</h3>
            <ul class="nav nav-justified">
                <li>@Html.ActionLink("Forsíða", "Index", "Home", null, new { @class = "active" })</li>
                <li>@Html.ActionLink("Textabeiðni", "Contact", "Home")</li>
                <li>@Html.ActionLink("Um Síðuna", "About", "Home")</li>
                <li>@Html.ActionLink("Algengar Spurningar", "About", "Home")</li>
            </ul>
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.loadTemplate-1.4.1.js"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>
</html>
