@model textis.ViewModel.ProjectViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Breyta</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Verkefni</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Nafn myndefnis", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, "Staða", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, new SelectList(
                new List<Object>
                {
                    new { value = 0, text = "Stofnað" },
                    new { value = 1, text = "Í vinnslu" },
                    new { value = 2, text = "Tilbúið" },
                },
                "value",
                "text",
                0))
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Url, "Vefslóð", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Url)
                @Html.ValidationMessageFor(model => model.Url)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryId, "Flokkur", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CategoryId", String.Empty)
                @Html.ValidationMessageFor(model => model.CategoryId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Vista" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Upload", "Project", FormMethod.Post, new { enctype = "multipart/form-data", id = Model.Id }))
{
    <input type='file' name='file' id='file' />
    <input type="submit" value="Sækja" />
    @Html.HiddenFor(m => m.Id)
}

<div>
    @Html.ActionLink("Aftur í skrá", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
