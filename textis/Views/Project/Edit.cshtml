@model textis.ViewModel.ProjectViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Breyta</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Verkefni</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Nafn myndefnis", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, "Staða", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, new SelectList(
                new List<Object>
                {
                    new { value = "Stofnað", text = "Stofnað" },
                    new { value = "Í vinnslu", text = "Í vinnslu" },
                    new { value = "Tilbúið", text = "Tilbúið" },
                },
                "value",
                "text",
                "Stofnað"))
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Url, "Vefslóð", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Url)
                @Html.ValidationMessageFor(model => model.Url)
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryId, "Flokkur", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CategoryId", String.Empty)
                @Html.ValidationMessageFor(model => model.CategoryId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Vista" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Upload", "Project", FormMethod.Post, new { enctype = "multipart/form-data", id = Model.Id }))
{
    if (User.Identity.IsAuthenticated)
    {
        <div>
            <input type='file' name='file' id='file' />
            <input type="submit" value="Sækja" />
            @Html.HiddenFor(m => m.Id)
        </div>
    }
}

@using (Html.BeginForm("DownloadFile", "Project", FormMethod.Post, new { enctype = "multipart/form-data", id = Model.Id }))
{
    <input type="submit" name="Submit" id="Submit" value="Sækja skrá" />
    @Html.HiddenFor(m => m.Id)        
}

<ul id="CommentUl" class="list-group" style="max-width: 560px;">
    @foreach (var item in Model.CommentLines)
    {

        <li class="list-group-item">
            <p>
                <span class="glyphicon glyphicon-user"></span>
                <span class="text-primary">@Html.DisplayFor(modelItem => item.User)</span>
                <span>@Html.DisplayFor(modelItem => item.Text)</span>
            </p>
            <p>
                <span class="text-muted">@item.Date.ToString("dd. MMMM HH:mm") - </span>    
            </p>
        </li>
    }

</ul>

@if (User.Identity.IsAuthenticated)
{ 
    <div class="form-horizontal">
        <label class="sr-only" for="Text">Comment</label>
        <textarea class="form-control" rows="3" id="Text" name="Text"></textarea>
        @Html.HiddenFor(model => model.Id)
        <button type="submit" class="btn btn-primary" id="Button">Send</button>
    </div>
}

<script type="text/html" id="commentTemplate"> 
    <li class="list-group-item">
        <p>
            <span class="glyphicon glyphicon-user"></span>
            <span class="text-primary" data-content="User"></span>
            <span data-content="Text"></span>
        </p>
        <p>
            <span class="text-muted" data-content="Date"></span>            
        </p>
    </li>   
</script>

<div>
    @Html.ActionLink("Aftur í skrá", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
